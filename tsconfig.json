{
  "compilerOptions": {
		"outDir": "./dist",
    "rootDir": "./src",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": ["**/node_modules", "**/examples", "**/dist", "**/*.test.ts"],
  "include": ["src"]
}
